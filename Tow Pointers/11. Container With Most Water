/**
 * @param {number[]} height
 * @return {number}
 */
var maxArea = function(height) {
    let [left, right] = [0, height.length - 1];
    let maxWater = 0;
    
    while(left < right) {
        const [lh, rh] = [height[left], height[right]];
        const water = Math.min(lh, rh) * (right - left);
        
        maxWater = Math.max(water, maxWater);
        
        if (height[left] < height[right]) {
            left++;
        } else {
            right--;
        }
        
    }
    
    return maxWater;
};
